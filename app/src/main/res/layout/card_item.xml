<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pokemon_card_main_pic"
        android:layout_width="130dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_anon_user_48dp"/>

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_card_main_pic"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_add_24"/>

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_card_main_pic"
        app:layout_constraintStart_toEndOf="@id/tradeButton"
        android:src="@drawable/ic_baseline_delete_24" />

    <ImageButton
        android:id="@+id/tradeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pokemon_card_main_pic"
        app:layout_constraintStart_toEndOf="@+id/addButton"
        android:src="@drawable/ic_baseline_autorenew_24">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>